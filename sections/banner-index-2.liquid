<div data-section-id="{{ section.id }}"  data-section-type="banner-index-2" class="section-banners">
    <div class="container">
          {% if section.settings.title != blank %}
    <div class="border-title wow fadeInDown animated {{ section.settings.title_position }}">
    
      <h3 class="service-title" style="color:{{ section.settings.title_color }};">    
        {{ section.settings.title }}
      </h3>
 
            {% if section.settings.description != blank %} <p style="color:{{ section.settings.desc_color }}" >{{ section.settings.description }}</p>{% endif %}  

    </div>
    {% endif %}
  
      	<div class="banners_wrapper">
        <div class="grid__item wide--one-half post-large--one-half large--one-half small-grid__item small--text-center">
           
          <div class=" block-banners">
                       
                {% for block in section.blocks %}
                    {% if block.settings.position == 'left' %}
     <div class="banner-item">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect">
       <div class="banner">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}" >
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
     </div>
        <div class="banner-content full-width  {{ block.settings.text_position }}">
            {% if block.settings.text_1 %}
                <h3 class="light upper">{{ block.settings.text_1 }}</h3>
            {% endif %}
      
           {% if block.settings.button_text %}
                    <a href="{{ block.settings.link }}" class="ra-btn-link">{{ block.settings.button_text }}</a>
                {% endif %}
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="grid__item wide--one-half post-large--one-half large--one-half small-grid__item small--text-center">
            <div class="block-banners">
                {% for block in section.blocks %}
                    {% if block.settings.position == 'right' %}
                        <div class="banner-item">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect">
        <div class="banner">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}"  alt="">
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
        </div>
          <div class="banner-content full-width  {{ block.settings.text_position }}">
            {% if block.settings.text_1 %}
                <h3 class="light upper">{{ block.settings.text_1 }}</h3>
            {% endif %}
      
           {% if block.settings.button_text %}
                    <a href="{{ block.settings.link }}" class="ra-btn-link">{{ block.settings.button_text }}</a>
                {% endif %}
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
      </div>
    </div>
</div>
<div class="dt-sc-hr-invisible-large"></div> 
{% schema %}
{
"name":"Banner index 2",
"settings": [
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Shop By Category"
},
{
"type":"select",
"id":"title_position",
"label":"Heading position",
"default":"text-center",
"options":[
{"value":"text-left","label":"Text Left"},
{"value":"text-right","label":"Text Right"},
{"value":"text-center","label":"Text Center"}
]
},
{
"type": "color",
"id": "title_color",
"label": "Heading Color",
"default": "#000"
},

{
"type": "textarea",
"id": "description",
"label": "Description",
"default":"Shopping for t-shirts is fun and easy with Teepro. Browse our amazing selection of t-shirt designs and find one that fits your personality or create your own t-shirt design from scratch."
},
{
"type": "color",
"id": "desc_color",
"label": "Description color",
"default": "#696969"
}
],
"blocks":[
{
"name":"Banner item",
"type":"banner-item-2",
"settings":[
{
"type":"image_picker",
"id":"image",
"label":"Image"
},
{
"type":"select",
"id":"position",
"label":"Banner position",
"default":"left",
"options":[
{"value":"left","label":"Left"},
{"value":"right","label":"Right"},
{"value":"center","label":"Center"}
]
},

{
"type":"url",
"id":"link",
"label":"Link"
},
{
"type":"select",
"id":"text_position",
"label":"Text position",
"options":[
{"value":"top-left","label":"Top Left"},
{"value":"top-center text-center","label":"Top center"},
{"value":"top-right","label":"Top right"},

{"value":"center-left text-left","label":"Center left"},
{"value":"center-left text-center","label":"Center"},
{"value":"center-right text-right","label":"Center right"},

{"value":"bottom-left text-left","label":"Bottom left"},
{"value":"bottom-left text-center","label":"Bottom Center"},
{"value":"bottom-right text-right","label":"Bottom right"},

{"value":"bottom-left rotate","label":"Bottom left rotate"}
]
},
{
"type":"text",
"id":"text_1",
"label":"Categories",
"default":"Categories"
},
{
"type":"text",
"id":"button_text",
"label":"Details",
"default":"View detail"
}
]
}
],
"presets":[
{
"name":"Banner index 2",
"category":"Banner",
"blocks":[
{
"type":"banner-item-2",
"settings":{
"position":"left"
}
},
{
"type":"banner-item-2",
"settings":{
"position":"left"
}
},
{
"type":"banner-item-2",
"settings":{
"position":"right"
}
},
{
"type":"banner-item-2",
"settings":{
"position":"right"
}
}
]
}
]
}
{% endschema %}