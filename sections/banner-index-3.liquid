<section class="section-banners container banner-index-3">
    <div class="wrapper">
         {% if section.settings.title_1 != blank %}
            <div class="border-title  text-left wow fadeInDown animated">
              {% if section.settings.description != blank %} 
              <h5 style="color:{{ section.settings.desc_color }}"  class="small-title">{{ section.settings.description }}</h5>
              {% endif %}  
              
              <p style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</p>
            </div>
            {% endif %}
        <div class="grid__item wide--one-half post-large--one-half large--one-half  small-grid__item small--text-center">
           
          <div class=" block-banners">
                       
                {% for block in section.blocks %}
                    {% if block.settings.position == 'left' %}
     <div class="banner-item" data-aos="{{ block.settings.effect }}" data-aos-easing="linear" data-aos-duration="1000" style="margin-bottom:{% if margin == '0' %}0px{% else %}30px{% endif %}">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect {{ block.settings.hover_effect }}">
       <div class="banner">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}"  alt="">
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
     </div>
        <div class="banner-content full-width  banner-type-2">
            {% if block.settings.show_text %}
                <h5 >
                  {{ block.settings.text_1 }}
                 </h5>
          
            {% endif %}
           {% if block.settings.show_text2 %}
                <h4 class="bold upper">{{ block.settings.text_2 }}</h4>
            
          {% endif %}
           {% if block.settings.show_button %}
                    <a href="{{ block.settings.link }}" class="ra-btn-link">{{ block.settings.button_text }}</a>
                {% endif %}
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="grid__item wide--one-half post-large--one-half large--one-half   small-grid__item small--text-center">
            <div class="block-banners">
                {% for block in section.blocks %}
                    {% if block.settings.position == 'right' %}
                        <div class="banner-item" data-aos="{{ block.settings.effect }}" data-aos-easing="linear" data-aos-duration="1000" style="margin-bottom:{% if margin == '0' %}0px{% else %}30px{% endif %}">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect {{ block.settings.hover_effect }}">
        <div class="banner">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}"  alt="">
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
        </div>
          <div class="banner-content full-width  banner-type-2">
            {% if block.settings.show_text %}
                <h5 >{{ block.settings.text_1 }}</h5>
          
            {% endif %}
           {% if block.settings.show_text2 %}
                <h4 class="bold upper">{{ block.settings.text_2 }}</h4>
            
          {% endif %}
           {% if block.settings.show_button %}
                    <a href="{{ block.settings.link }}" class="ra-btn-link">{{ block.settings.button_text }}</a>
                {% endif %}
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
  <div class="dt-sc-hr-invisible-large"></div>
</section>

{% schema %}
{
"name":"Banner index 2",
"settings": [

{
"type": "text",
"id": "title_1",
"label": "Heading"
},
{
"type": "color",
"id": "title_1_clr",
"label": "Heading",
"default": "#000"
},        

{
"type": "textarea",
"id": "description",
"label": "Small Heading"
},
{
"type": "color",
"id": "desc_color",
"label": "Description color",
"default": "#000"
}, 

{
"type": "color",
"id": "tag_clr",
"label": "Tag Color",
"default": "#000"
},
{
"type": "color",
"id": "tag_bg_clr",
"label": "Tag Bg Color",
"default": "#000"
