},
{
"type":"checkbox",
"id":"show_button",
"label":"Show button",
"default":false
},
{
"type":"html",
"id":"button_text",
"label":"Button text",
"default":"View detail"
}
]
}
],
"presets":[
{
"name":"Banner index 3",
"category":"Banner",
"blocks":[
