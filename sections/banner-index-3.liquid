{"value":"none","label":"No effect"},
{"value":"banner-effect1","label":"effect 1"},
{"value":"banner-effect2","label":"effect 2"},
{"value":"banner-effect3","label":"effect 3"},
{"value":"banner-effect4","label":"effect 4"},
{"value":"banner-effect5","label":"effect 5"},
{"value":"banner-effect6","label":"effect 6"},
{"value":"banner-effect7","label":"effect 7"},
{"value":"banner-effect8","label":"effect 8"},
{"value":"banner-effect9","label":"effect 9"}
]
},
{
"type":"url",
"id":"link",
"label":"Link"
},
{
"type":"checkbox",
"id":"show_text",
"label":"Show text",
"default":false
},
{
"type":"select",
"id":"text_position",
"label":"Text position",
"options":[
{"value":"top-left","label":"Top Left"},
{"value":"top-center text-center","label":"Top center"},
{"value":"top-right","label":"Top right"},

{"value":"center-left text-left","label":"Center left"},
{"value":"center-left text-center","label":"Center"},
{"value":"center-right text-right","label":"Center right"},

{"value":"bottom-left text-left","label":"Bottom left"},
{"value":"bottom-left text-center","label":"Bottom Center"},
{"value":"bottom-right text-right","label":"Bottom right"},

{"value":"bottom-left rotate","label":"Bottom left rotate"}
]
},
{
"type":"html",
"id":"text_1",
"label":"Text 1",
"default":"<div class=\"txt-caption has-divider\"> WOMAN COLLECTION<span class=\"txt-caption-divider\"></span></div>"
},
{
