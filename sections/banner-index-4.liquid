<div data-section-id="{{ section.id }}"  data-section-type="banner-index-4">  

<section class="section-banners container ">
    <div class="wrapper">
       {% if section.settings.title_1 != blank %}
            <div class="border-title  wow fadeInDown animated {{ section.settings.title_position }}">
              <h2 class="service-title" style="color:{{ section.settings.title_1_clr }};">{{ section.settings.title_1 }}</h2>
               {% if section.settings.description != blank %} 
              <p style="color:{{ section.settings.desc_color }}">{{ section.settings.description }}</p>
              {% endif %}  
            </div>
            {% endif %}
      <div class="banner__content">
        <div class="grid__item wide--one-half post-large--one-half large--one-half medium--one-half small-grid__item small--text-center">
            <div class=" block-banners  block-banners-type">
                {% for block in section.blocks %}
                    {% if block.settings.position == 'left' %}
                        <div class="banner-item">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect">
        <div class="banner {{ block.settings.image_position }}">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}"  alt="">
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
        </div>
      
        <div class="banner-content full-width  {{ block.settings.banner_position }}  ">
           <div class="banner-4"> 
    
                <h4 class="light upper">{{ block.settings.text_1 }}</h4>
                {% if block.settings.description_text %}
                        <p  class="ra-btn-link">{{ block.settings.description_text }}</p>
                {% endif %}
         
               </div>
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="grid__item wide--one-half post-large--one-half large--one-half medium--one-half small-grid__item small--text-center">
            <div class="block-banners block-banners-type">
                {% for block in section.blocks %}
                    {% if block.settings.position == 'right' %}
                        <div class="banner-item">
    <a href="{{ block.settings.link }}" target="_self" class="banner-effect">
         <div class="banner {{ block.settings.image_position }}">
            {% if block.settings.image != blank %}
                <img  src="{{ block.settings.image | img_url:'master' }}"  alt="">
            {% else %}
                {{ 'collection-2' |placeholder_svg_tag }}
            {% endif %}
        </div>
        <div class="banner-content  block-banners-type full-width  {{ block.settings.banner_position }}  ">
          <div class="banner-4"> 
          
                <h4 class="light upper">{{ block.settings.text_1 }}</h4>
                {% if block.settings.description_text %}
                    <p  class="ra-btn-link">{{ block.settings.description_text }}</p>
                {% endif %}
          
          </div>
        </div>
    </a>
</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
      </div>
    </div>
   <div class="dt-sc-hr-invisible-large"></div>
</section>
</div>
