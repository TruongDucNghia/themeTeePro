<div class="image_banner_pages">
			<div class="container" style="{% if section.settings.background_color_wrapper != blank %}  background-image:url({{ section.settings.background_color_wrapper | img_url: '1920X'  }}){% endif %}">
									<div class="text_banner_bottom_section">
                                  {{ section.settings.code }}
          <a href="{{ section.settings.button_link }}" class="custom_link btn">
              {{ section.settings.button_label }}
                                      </a>
              </div>
							</div>
		</div>

{% schema %}
{
	"name": "Collection Banner",
	"settings": [
{
"type": "text",
"id": "heading",
"label": "Heading",
"default":"FAQ"
},
 {
              "type": "range",
              "id": "size",
              "min": 10,
              "max": 60,
              "step": 1,
              "label": "Font size",
              "unit": "px",
              "default": 24
            },
{
"type": "image_picker",
"id": "background_color_wrapper",
"label": "Bg Wrapper",
"info": "Size: 1920x1217"
},

   {
            "type": "textarea",
            "id": "code",
            "label": "HTML",
            "default": "<h2>Custom content</h2><p>Use this advanced section to build your own layouts or to add custom HTML or scripts.</p>"
          },

 			{
            "type": "text",
            "id": "button_label",
            "label": "Button label",
			"default":"Create Now"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }

]
}
{% endschema %}
