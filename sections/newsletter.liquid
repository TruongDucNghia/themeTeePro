<div data-section-id="{{ section.id }}"  data-section-type="newsletter-block news-block-3" class="newsletter-block news-block-3 parallax" style="{% if section.settings.image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-attachment: scroll;background-size:cover;background-position:center;{% else %}background-color:{{section.settings.news_bg_clr}}{% endif%};">  
  <div class="newsletter-block-type-3 ">
    <div class="overlay"></div>
    <div class="container">
      {% if section.settings.title != blank %}
      <div class="border-title wow fadeInUp animated">       
        <h2 class="newslet_title " style="color:{{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
        {% endif %}       
        {% if section.settings.news_desc != blank %}
        <p  class="" style="color:{{section.settings.text_color}}"> {{ section.settings.news_desc }}</p>
        {% endif %}

      </div>
      <div class="mc-embedded-subscribe-form wow fadeInUp animated">
        {% if settings.newsletter_form_action != blank %}
        <form action="{{ settings.newsletter_form_action }}" method="post"  name="mc-embedded-subscribe-form" target="_blank" class="input-group wow fadeInUp animated">
          <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="EMAIL" class="mail" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}">
          <button type="submit" class="btn subscribe" name="subscribe" value="" ></button>    
        </form>
        {% else %}
        {% form 'customer' %}
        {% if form.posted_successfully? %}
        <p class="note form-success">{{ 'general.newsletter_form.mailing_list_success_message' | t }}</p>
        {% else %}

        <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" name="contact[email]" class="mail" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" >
        <input type="hidden" name="contact[tags]" value="newsletter">
        <button type="submit" class="btn subscribe" name="subscribe" value="" ></button>          

        {% endif %}
        {{ form.errors | default_errors }}
        {% endform %}  
        {% endif %}
      </div>
              {% if section.settings.footer_newletter != blank %}
        <p  class="new_letter_text_3" > {{ section.settings.footer_newletter }}</p>
        {% endif %}
      {% if section.settings.footer_social_enable %}      
      <div class="footer_social_links wow fadeInUp animated">
        {% include 'social-links-type-6' %}
      </div>
      {% endif %}

    </div>
  </div>
  <style>
    .newsletter-block-type-3 form input[type="email"]{color:{{section.settings.input_txt_color}};}
    .newsletter-block-type-3 form input[type="email"]:focus{background-color:{{ section.settings.input_bg_color | color_modify: 'alpha', 0.5 }}; }

    {% if section.settings.show_overlay_bg != blank %}
    .newsletter-block.news-block-3::before{background:{{section.settings.news_bg_clr}};}
    {% endif %}
    .newsletter-block-type-3 form .btn{color:{{section.settings.btn_txt_color}};}

    .newsletter-block-type-3 .inline-list li a {border:1px solid {{section.settings.social_icon_borderclr}};}
    .newsletter-block-type-3 .inline-list li a:hover{border:1px solid {{section.settings.social_icon_hoverbg_clr}};background:{{section.settings.social_icon_hoverbg_clr}};color:{{section.settings.social_icon_hover_clr}};}
.newsletter-block-type-3  .contact-form .subscribe:after {
    content: '\f1d9';
    font-family: 'FontAwesome';
    font-size: 16px;
    position: absolute;
    top: 50%;
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    z-index: 1;
}
.newsletter-block-type-3 form input[type="email"] {
    color: #000;
    height: 45px;
    margin-bottom: 0;
    -webkit-border-radius: 25px 0 0 25px;
    border-radius: 0;
    padding: 0 20px 0 30px;
    outline: none;
    background: transparent;
    width: 100%;
    /* border-right: 0 none !important; */
    border: 1px solid rgb(4,181,145);
}
.newsletter-block-type-3 form .btn {
    color: #fff;
    background: transparent;
    width: 60px;
    height: 45px;
    z-index: 2;
    position: relative;
    border-width: 1px;
    border-style: solid;
    /* border-color: #ccc; */
    border-left: 0;
    -webkit-border-radius: 0 25px 25px 0;
    border-radius: 0;
    background-color: rgb(4,181,145);
}
.newsletter-block-type-3  .contact-form {
    float: none;
    padding-right: 1px;;
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
    max-width: 880px;
    margin: auto;
}
    
  .newsletter-block-type-3   .border-title{
      margin-bottom:20px; 
    }

  </style>
</div>


