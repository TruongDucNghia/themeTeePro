

     
      {% if section.settings.enable_shop_by_tags_1 %}
      <aside class="sidebar-tag color filter tags">  
        <div class="widget">
          <h4>
            <span>{{ section.settings.shop_by_tags_1_title  }}</span>
            <a href="javascript:void(0)" class="clear" style="display:none">
            <i class="zmdi zmdi-close"></i>
            </a>
          </h4>
        </div>
        
       
        
        
        <div class="widget-content">
          <ul>
              {% assign tags = section.settings.shop_by_color_list_tags | split: ',' %}
                {% for t in tags %}
                {% assign tag = t | strip %}
                {% assign tag_value = tag | handleize %}
                <li class="cat-item{% if current_tags contains t %} current-cat{% endif %}">
                  <input type="checkbox" value="{{ tag_value | split: '|' | first }}" {% if current_tags contains t %}checked{% endif %}/>
                  <a href="javascript:void(0)" title="{{tag}}" style="background: {{tag}}"  class="{% if current_tags contains t %}active{% endif %}">
                  </a>
                </li>
                {% endfor %}
          </ul>
        </div>
      </aside>
      {% endif %}



   
 {% schema %}
  {
    "name": "Colors",
    "settings": [
	  {
        "type": "checkbox",
        "id": "enable_sidebar_multiple_choice",
        "label": "Multiple choices",
        "default": true,
        "info": "User can select multiple colors (size, brand...) or only one color (size, brand...)?"
      },     
      {
        "type": "header",
        "content": "Shop by Color"
      },
     {
        "type": "checkbox",
        "id": "enable_shop_by_tags_1",
        "label": "Enable",
        "default": true
      },
      {
        "type": "text",
        "id": "shop_by_tags_1_title",
        "label": "Title",
        "default": "Shop By Color",
        "info": "i.e \"Shop by Color\"."
      },
 		{
        "type": "checkbox",
        "id": "enable_filters",
        "label": "Enable filter",
        "default": true
      },
      {
        "type": "textarea",
        "id": "shop_by_color_list_tags",
        "info": "Shop by Color list tags is tags in product",
        "label": "Shop by Color list tags"
      }
]
}
{% endschema %}



