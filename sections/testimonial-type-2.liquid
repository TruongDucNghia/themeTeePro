<div data-section-id="{{ section.id }}"  data-section-type="testimonial-type-18" class="testimonial-type-18">
  <div class="grid-uniform testimonial-block parallax" style="{% if section.settings.bg_img != blank %} background-image:url({{ section.settings.bg_img | img_url: '1920X'  }}){% else %}background-color:{{section.settings.background_color}}{% endif %} float:left;width:100%;padding:100px 0;">

    <div class="testimonial-overlay" style="background-color:{{ section.settings.bg_color }};opacity:0.9;position:absolute;top:0;width:100%;height:100%;"></div>
    <div class="container" style="position:relative;">


      {% if section.settings.title != blank or section.settings.small_title  %}
      <div class="section-header section-header--small" >
       
          {% endif %}  
{% if section.settings.description != blank %} <h5 style="color:{{ section.settings.desc_color }}"  class="small-title">{{ section.settings.description }}</h5>{% endif %}  
          {% if section.settings.title != blank %}
          <h2 class="section-header__title" style="color:{{ section.settings.title_clr }};">    
            {{ section.settings.title }}
          </h2>
          {% endif %}  
          {% if section.settings.small_title != blank %}
          <div class="short-desc"><p style="color:{{ section.settings.text_clr }};">{{ section.settings.small_title }}</p></div>{% endif %}  
          {% if section.settings.title != blank or section.settings.small_title  %}

      
      </div>

      {% endif %}   


      <div class="testimonial_multi_thumb_zoom_image ">

      
        
        <div class="grid__item wide--two-fifths post-large--two-fifths large--two-fifths medium--two-fifths  small-grid__item testimonial-block-2">
        <div class="slider slider-for">
   			    {% if section.blocks.size > 0 %}  
          {% for block in section.blocks %}
            {% if  block.settings.image_1 != blank %}
                <img src="{{  block.settings.image_1 | img_url: "1920X" }}" alt="{{  block.settings.author_name }}" />
                {% else %}
                <img src="//via.placeholder.com/500x500">
                {% endif %} 
            {% endfor %}         
          {% endif %}  
          
  </div>
        </div>

  <div class="grid__item wide--three-fifths  post-large--three-fifths  large--three-fifths  small--three-fifths  small-grid__item ">
    	<div class="testimonial-car-2 slider-nav">
          {% if section.blocks.size > 0 %}  
          {% for block in section.blocks %}
          <div class="grid__item "> 
            <div class="testimonial-block">


          
              
              
                <div class="img-full">
                {% if  block.settings.image_1 != blank %}
                <img src="{{  block.settings.image_1 | img_url: "1920X" }}" alt="{{  block.settings.author_name }}" />
                {% else %}
                <img src="//via.placeholder.com/500x500">
                {% endif %} 
              </div>
              <div class="vc-testimonial-content">
  <div class="vc-title">
                                                   {% if block.settings.author_name != blank %} <h2 class="client-name"> {{ block.settings.author_name }},</h2>       {% endif %}                                                  
                                                {% if block.settings.image_1_heading != blank %} <div class="client-position">{{ block.settings.image_1_heading }}</div> {% endif %}
                                                </div>
                                                     {% if block.settings.text_desc != blank %} <p class="description">{{ block.settings.text_desc }}</p> {% endif %} 
              
              
              </div>
            </div>
          </div>
          {% endfor %}         
          {% endif %}  
    </div>
        </div>

 
      </div>
    </div>    
  </div>
  <div class="dt-sc-hr-invisible-large"></div>
</div>


<style>

  {% if section.settings.heading_image_need %} .testimonial-type-18 .testimonial-block .border-title:after {  content:"";background-image:url({{ section.settings.heading_image | img_url: 'master' }});display:inline-block;background-repeat:no-repeat;width:75px;height:34px;} {% endif %}


  .testimonial-type-18 .testimonial-block .btn:hover { color: {{ section.settings.hover_btn_text }};opacity:1;}


  .testimonial-type-18 .testimonial-block .btn { display: inline-block;background:{{ section.settings.color_bg | color_modify: 'alpha', 1 }};border:none;color: {{ section.settings.color_text }};opacity:0.7;  }

  .testimonial-type-18 .testimonial-block .btn:before {background: {{ section.settings.hover_btn }}; }

  .testimonial-type-18 .testimonial-block .btn:hover,.testimonial-type-18 .testimonial-block .btn:active,.testimonial-block .btn:focus { background-color: {{ section.settings.hover_btn }}; color: {{ settings.hover_btn_text }}; border-color: {{ section.settings.hover_btn }}; }

  .testimonial-type-18  .testimonial-car-2 .testimonial-block {
    display: flex;
    align-items: center;
    text-align:left;
  }
  
  .img-full {
    padding: 0 30px;
    text-align: center;
}
  .vc-testimonial-content {
    padding: 0 30px;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
  h2.client-name {
    position: relative;
    margin-bottom: 15px;
    line-height: 1;
}
  h2.client-name:before {
    content: '';
    position: absolute;
    left: -130px;
    top: 50%;
    width: 100px;
    height: 2px;
    background: #525252;
}
  .testimonial_multi_thumb_zoom_image{   
    display: flex;
    flex-wrap: nowrap;
    align-items: flex-end;
    position: relative;}
  
    .testimonial_multi_thumb_zoom_image .testimonial-block-2 { 
      position: static;
    flex: 0 0 360px;
    margin-right: 30px;
    width: 300px;
    margin: 0 auto;
    }
  @media (max-width:768px){
    .testimonial-type-18  .testimonial-block-2 {
    	display:none;
    }
    
   .testimonial-type-18  .img-full {
     padding:0 ;
     max-width: 60%;
    flex: 0 0 60%;
    }
    .testimonial-type-18  .vc-testimonial-content { padding: 0}
    
    .testimonial-type-18 .testimonial-block { padding: 0;}
    
  }
  
</style>




